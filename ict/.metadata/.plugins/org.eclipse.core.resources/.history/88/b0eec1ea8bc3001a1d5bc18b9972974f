 <script>
  
  $('#followupdate').datepicker({
		format : 'dd/mm/yyyy'
	});
  $('#followupdate').prop('disabled','false');
  $(function(){
      $('#followup').on('click',function(){
          if(this.checked)
              {
            
        	  $('#followupdate').prop('disabled','');
        	  $('#followupdate').prop('required','required');
              }
          else
              {
        	  $('#followupdate').prop('disabled','false');
            	 
            	  }
      });
  }); 
  </script>   
  
  <script src="webjars/bootstrap-datepicker/1.0.1/js/bootstrap-datepicker.js"></script>
  <script>
